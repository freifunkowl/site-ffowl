	gluon-config-mode-ppa \
	ffffm-button-bind \
	ffho-ap-timer \
	ffho-web-ap-timer \
	fflip-speedtest \
	fflip-unifi-gain-adjustor \
	gluon-scheduled-domain-switch \
	gluon-config-mode-domain-select

